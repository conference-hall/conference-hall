{
  "exclude": ["./cypress", "./cypress.config.ts"],
  "include": ["**/*.ts", "**/*.tsx", "app/.server/**/*.ts", "app/.server/**/*.tsx", ".react-router/types/**/*"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["@react-router/node", "vitest/globals", "@vitest/browser/providers/playwright"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "~/*": ["./app/*"],
      "tests/*": ["./tests/*"]
    },
    "skipLibCheck": true,
    "noEmit": true
  }
}

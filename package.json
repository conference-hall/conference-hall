{
  "name": "conference-hall",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "dotenv -e .env.dev -- concurrently -k -c '#fdba74,#93c5fd' 'npm:dev:*'",
    "dev:web": "tsx ./servers/web.dev.ts",
    "dev:job": "tsx watch ./servers/jobs.ts",
    "build": "react-router build",
    "start": "npm run start:db && npm run start:server",
    "start:db": "prisma migrate deploy",
    "start:server": "node ./build/server/index.js",
    "jobs:start": "tsx ./servers/jobs.ts",
    "jobs:build": "echo 'no build needed'",
    "test": "npm run test:db && npm run test:unit",
    "test:db": "dotenv -e .env.test -- prisma db push --accept-data-loss",
    "test:unit": "dotenv -e .env.test -- vitest --browser.headless",
    "test:ui": "dotenv -e .env.test -- vitest --project browser",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui --ui-host=localhost",
    "db:migrate": "dotenv -e .env.dev -- prisma migrate dev",
    "db:reset": "dotenv -e .env.dev -- prisma migrate reset -f",
    "emails": "dotenv -e .env.dev -- npx --yes react-email dev --dir ./app/emails/templates --port 3002",
    "lint": "biome check",
    "lint:ci": "biome ci",
    "tsc": "react-router typegen && tsc -b",
    "knip": "knip --cache"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  },
  "overrides": {
    "react-is": "^19.1.0"
  },
  "dependencies": {
    "@conform-to/zod": "^1.6.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@floating-ui/react": "^0.27.8",
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@mjackson/form-data-parser": "^0.7.0",
    "@prisma/client": "^6.8.2",
    "@react-email/components": "^0.0.41",
    "@react-router/express": "~7.6.0",
    "@react-router/node": "~7.6.0",
    "@sindresorhus/slugify": "^2.2.1",
    "bullmq": "^5.53.0",
    "class-variance-authority": "^0.7.1",
    "compression": "^1.8.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "firebase": "^11.8.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "i18next": "^25.2.0",
    "i18next-browser-languagedetector": "^8.1.0",
    "i18next-http-backend": "^3.0.2",
    "ioredis": "^5.6.1",
    "isbot": "^5.1.28",
    "json-2-csv": "^5.5.9",
    "mailgun.js": "^12.0.1",
    "marked": "^15.0.12",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.3",
    "picocolors": "^1.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.2",
    "react-router": "~7.6.0",
    "recharts": "^2.15.3",
    "remix-i18next": "^7.2.1",
    "sitemap": "^8.0.0",
    "sonner": "^2.0.3",
    "use-debounce": "^10.0.4",
    "uuid": "^11.1.0",
    "xss": "^1.0.15",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@mdx-js/rollup": "^3.1.0",
    "@ngneat/falso": "^7.3.0",
    "@playwright/test": "^1.52.0",
    "@react-router/dev": "~7.6.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.7",
    "@types/compression": "^1.8.0",
    "@types/mdx": "^2.0.13",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.21",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@vitest/browser": "^3.1.1",
    "close-with-grace": "^2.2.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "knip": "^5.57.2",
    "lefthook": "^1.11.13",
    "prisma": "^6.8.2",
    "tailwindcss": "^4.1.7",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1",
    "vitest-browser-react": "^0.2.0"
  },
  "engines": {
    "node": "22.x"
  }
}

{
  "name": "conference-hall",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "dotenv -e .env.dev -- concurrently -k -c '#fdba74,#93c5fd' 'npm:dev:*'",
    "dev:vite": "remix vite:dev",
    "dev:jobs": "tsx watch --clear-screen=false ./servers/jobs.server.ts",
    "build": "remix vite:build",
    "start": "npm run start:db && npm run start:server",
    "start:db": "prisma migrate deploy",
    "start:server": "node ./build/server/index.js",
    "jobs:start": "tsx ./servers/jobs.server.ts",
    "jobs:build": "echo 'no build needed'",
    "test": "npm run test:db && npm run test:unit",
    "test:db": "dotenv -e .env.test -- prisma db push --accept-data-loss",
    "test:unit": "dotenv -e .env.test -- vitest --config ./vitest.config.ts",
    "test:e2e": "dotenv -e .env.dev -- cypress open --e2e -b electron",
    "db:migrate": "dotenv -e .env.dev -- prisma migrate dev",
    "db:reset": "dotenv -e .env.dev -- prisma migrate reset -f",
    "emails": "dotenv -e .env.dev -- npx --yes react-email dev --dir ./app/emails/templates --port 3002",
    "lint": "biome check",
    "lint:ci": "biome ci",
    "tsc": "tsc -b && tsc -b cypress"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  },
  "dependencies": {
    "@conform-to/zod": "^1.2.2",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^7.0.0",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^5.22.0",
    "@react-email/components": "^0.0.28",
    "@remix-run/node": "^2.15.0",
    "@remix-run/react": "^2.15.0",
    "@remix-run/serve": "^2.15.0",
    "@sentry/remix": "^8.40.0",
    "@sindresorhus/slugify": "^2.2.1",
    "bullmq": "^5.29.1",
    "class-variance-authority": "^0.7.0",
    "compression": "^1.7.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "firebase": "^11.0.2",
    "firebase-admin": "^13.0.1",
    "form-data": "^4.0.1",
    "helmet": "^8.0.0",
    "http-proxy-middleware": "^3.0.3",
    "isbot": "^5.1.17",
    "json-2-csv": "^5.5.6",
    "mailgun.js": "^10.2.4",
    "marked": "^15.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.16",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.13.3",
    "remix": "^2.15.0",
    "sitemap": "^8.0.0",
    "sonner": "^1.7.0",
    "tiny-invariant": "^1.3.3",
    "use-debounce": "^10.0.4",
    "uuid": "^11.0.3",
    "xss": "^1.0.15",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@mdx-js/rollup": "^3.1.0",
    "@ngneat/falso": "^7.2.0",
    "@remix-run/dev": "^2.15.0",
    "@sentry/vite-plugin": "^2.22.6",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/cypress": "^10.0.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/source-map-support": "^0.5.10",
    "autoprefixer": "^10.4.20",
    "close-with-grace": "^2.1.0",
    "concurrently": "^9.1.0",
    "cypress": "^13.16.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.4",
    "jsdom": "^25.0.1",
    "lefthook": "^1.8.4",
    "prisma": "^5.22.0",
    "remix-flat-routes": "^0.6.5",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": "22.x"
  }
}

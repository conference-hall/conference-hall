{
  "name": "conference-hall-remix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "dotenv -e .env.dev -- run-p dev:*",
    "dev:app": "node ./server.mjs",
    "dev:jobs": "tsx ./jobs/server.ts",
    "build": "remix vite:build",
    "start": "run-s start:*",
    "start:db": "prisma migrate deploy",
    "start:server": "node ./server.mjs",
    "jobs:start": "tsx ./jobs/server.ts",
    "jobs:build": "echo 'no build needed'",
    "test": "dotenv -e .env.test -- run-s test:*",
    "test:db": "prisma db push --accept-data-loss",
    "test:unit": "vitest --config ./vitest.config.ts",
    "cypress": "dotenv -e .env.dev -- cypress open --e2e -b electron",
    "db:migrate": "dotenv -e .env.dev -- prisma migrate dev",
    "db:reset": "dotenv -e .env.dev -- prisma migrate reset -f",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint --ignore-path .gitignore .",
    "tsc": "tsc -b && tsc -b cypress",
    "story": "ladle serve",
    "dep:updates": "npx npm-check-updates -i",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint --ignore-path .gitignore",
    "**/*.{json,md,mdx,html,css,yml}": "prettier -l --write"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.1.3",
    "@prisma/client": "^5.12.1",
    "@remix-run/node": "2.8.1",
    "@remix-run/react": "2.8.1",
    "@remix-run/serve": "2.8.1",
    "@sentry/remix": "^7.111.0",
    "@sindresorhus/slugify": "^2.2.1",
    "bullmq": "^5.7.3",
    "class-variance-authority": "^0.7.0",
    "compression": "^1.7.4",
    "date-fns": "^3.6.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "firebase": "^10.11.0",
    "firebase-admin": "^12.1.0",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.0",
    "isbot": "^5.1.4",
    "mailgun.js": "^10.2.1",
    "marked": "^12.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hotkeys-hook": "^4.5.0",
    "remix": "2.8.1",
    "sonner": "^1.4.41",
    "source-map-support": "^0.5.21",
    "tiny-invariant": "^1.3.3",
    "use-debounce": "^10.0.0",
    "uuid": "^9.0.1",
    "xss": "^1.0.15",
    "zod": "^3.22.5"
  },
  "devDependencies": {
    "@ladle/react": "^4.0.3",
    "@ngneat/falso": "^7.2.0",
    "@remix-run/dev": "2.8.1",
    "@remix-run/eslint-config": "2.8.1",
    "@sentry/vite-plugin": "^2.16.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.12",
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/compression": "^1.7.5",
    "@types/eslint": "^8.56.10",
    "@types/marked": "^5.0.2",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@types/source-map-support": "^0.5.10",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.19",
    "close-with-grace": "^1.3.0",
    "cypress": "^13.8.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "prisma": "^5.12.1",
    "remix-flat-routes": "^0.6.4",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.5.0"
  },
  "engines": {
    "node": "20.x"
  }
}

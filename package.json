{
  "private": true,
  "name": "conference-hall-remix",
  "description": "",
  "license": "MIT",
  "scripts": {
    "dev": "dotenv -e .env.dev -- run-s dev:*",
    "dev:db": "prisma migrate dev",
    "dev:serve": "remix dev",
    "test": "dotenv -e .env.test -- run-s test:*",
    "test:db": "prisma db push --accept-data-loss",
    "test:unit": "vitest --config ./vitest.config.ts",
    "cypress": "dotenv -e .env.dev -- cypress open --e2e -b electron",
    "build": "remix build",
    "serve": "remix-serve build",
    "serve:ci": "remix-serve build > /dev/null",
    "db:reset": "dotenv -e .env.dev -- prisma migrate reset",
    "format": "prettier -l --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "tsc": "tsc -b && tsc -b cypress",
    "story": "ladle serve",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint",
    "**/*.{json,md,mdx,html,css,yml}": "prettier -l --write"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.14",
    "@heroicons/react": "^2.0.17",
    "@prisma/client": "^4.13.0",
    "@remix-run/node": "1.15.0",
    "@remix-run/react": "1.15.0",
    "@remix-run/serve": "1.15.0",
    "@remix-validated-form/with-zod": "^2.0.5",
    "@sindresorhus/slugify": "^2.2.0",
    "classnames": "^2.3.2",
    "date-fns": "^2.29.3",
    "firebase": "^9.20.0",
    "firebase-admin": "^11.7.0",
    "form-data": "^4.0.0",
    "isbot": "^3.6.10",
    "marked": "^4.3.0",
    "nodemailer": "^6.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix": "1.15.0",
    "remix-utils": "^6.1.0",
    "tiny-invariant": "^1.3.1",
    "use-debounce": "^9.0.4",
    "uuid": "^9.0.0",
    "xss": "^1.0.14",
    "zod": "^3.21.4",
    "zod-form-data": "^2.0.1"
  },
  "devDependencies": {
    "@ladle/react": "^2.12.2",
    "@ngneat/falso": "^6.4.0",
    "@remix-run/dev": "1.15.0",
    "@remix-run/eslint-config": "1.15.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/eslint": "^8.37.0",
    "@types/form-data": "^2.5.0",
    "@types/marked": "^4.0.8",
    "@types/nodemailer": "^6.4.7",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.0.11",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "cypress": "^12.10.0",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.2.1",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "happy-dom": "^9.9.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "prisma": "^4.13.0",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.30.1"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}

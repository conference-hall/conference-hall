{
  "name": "conference-hall",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "dotenv -e .env.dev -- concurrently -k -c '#fdba74,#93c5fd' 'npm:dev:*'",
    "dev:web": "tsx ./servers/web.dev.ts",
    "dev:job": "tsx watch ./servers/jobs.ts",
    "build": "react-router build",
    "start": "npm run start:db && npm run start:server",
    "start:db": "prisma migrate deploy",
    "start:server": "node ./build/server/index.js",
    "jobs:start": "tsx ./servers/jobs.ts",
    "jobs:build": "echo 'no build needed'",
    "test": "npm run test:db && npm run test:unit",
    "test:db": "dotenv -e .env.test -- prisma db push --accept-data-loss",
    "test:unit": "dotenv -e .env.test -- vitest --browser.headless",
    "test:ui": "dotenv -e .env.test -- vitest --project browser",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui --ui-host=localhost",
    "db:migrate": "dotenv -e .env.dev -- prisma migrate dev",
    "db:reset": "dotenv -e .env.dev -- prisma migrate reset -f",
    "emails": "dotenv -e .env.dev -- npx --yes react-email dev --dir ./app/emails/templates --port 3002",
    "lint": "biome check",
    "lint:ci": "biome ci",
    "tsc": "react-router typegen && tsc -b"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  },
  "overrides": {
    "react-is": "^19.0.0"
  },
  "dependencies": {
    "@conform-to/zod": "^1.2.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@mjackson/form-data-parser": "^0.6.0",
    "@prisma/client": "^6.2.1",
    "@react-email/components": "^0.0.32",
    "@react-router/express": "^7.1.3",
    "@react-router/node": "^7.1.3",
    "@sentry/node": "^8.50.0",
    "@sentry/react": "^8.50.0",
    "@sindresorhus/slugify": "^2.2.1",
    "bullmq": "^5.34.10",
    "class-variance-authority": "^0.7.1",
    "compression": "^1.7.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "firebase": "^11.2.0",
    "firebase-admin": "^13.0.2",
    "form-data": "^4.0.1",
    "helmet": "^8.0.0",
    "http-proxy-middleware": "^3.0.3",
    "isbot": "^5.1.21",
    "json-2-csv": "^5.5.7",
    "mailgun.js": "^10.3.0",
    "marked": "^15.0.6",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.16",
    "picocolors": "^1.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.3",
    "recharts": "^2.15.0",
    "sitemap": "^8.0.0",
    "sonner": "^1.7.2",
    "use-debounce": "^10.0.4",
    "uuid": "^11.0.5",
    "xss": "^1.0.15",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@mdx-js/rollup": "^3.1.0",
    "@ngneat/falso": "^7.3.0",
    "@playwright/test": "^1.49.1",
    "@react-router/dev": "^7.1.3",
    "@sentry/vite-plugin": "^2.22.7",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.0",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@vitest/browser": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "close-with-grace": "^2.2.0",
    "concurrently": "^9.1.2",
    "dotenv-cli": "^8.0.0",
    "lefthook": "^1.10.8",
    "prisma": "^6.2.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": "22.x"
  }
}

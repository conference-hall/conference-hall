{
  "private": true,
  "name": "conference-hall-remix",
  "description": "",
  "license": "MIT",
  "scripts": {
    "dev": "npm run db:migrate:dev && run-p dev:*",
    "dev:css": "npm run css:generate -- --watch",
    "dev:remix": "dotenv -e .env.dev -- remix dev",
    "build": "run-s build:*",
    "build:css": "npm run css:generate -- --minify",
    "build:remix": "remix build",
    "serve": "remix-serve build",
    "test": "run-s db:migrate:test test:unit",
    "test:unit": "dotenv -e .env.test -- vitest --config ./vitest.config.ts",
    "cy:open": "start-server-and-test dev http://localhost:3000 'dotenv -e .env.dev -- cypress open --e2e -b electron'",
    "cy:run": "start-server-and-test cy:server http://localhost:3001 'dotenv -e .env.test -- cypress run'",
    "cy:server": "dotenv -e .env.test -- run-s build db:migrate:test serve",
    "db:studio": "dotenv -e .env.dev -- prisma studio",
    "db:reset": "dotenv -e .env.dev -- prisma migrate reset",
    "db:migrate:dev": "dotenv -e .env.dev -- prisma migrate dev",
    "db:migrate:test": "dotenv -e .env.test -- prisma db push --accept-data-loss",
    "css:generate": "tailwindcss -o ./app/tailwind.css",
    "format": "prettier -l --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "tsc": "tsc -b && tsc -b cypress",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint",
    "**/*.{json,md,mdx,html,css,yml}": "prettier -l --write"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^2.0.8",
    "@prisma/client": "^4.2.1",
    "@remix-run/node": "^1.6.8",
    "@remix-run/react": "^1.6.8",
    "@remix-run/serve": "^1.6.8",
    "classnames": "^2.3.1",
    "date-fns": "^2.29.2",
    "dotenv": "^16.0.1",
    "firebase": "^9.9.3",
    "firebase-admin": "^11.0.1",
    "marked": "^4.0.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix": "^1.7.0",
    "xss": "^1.0.14",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@ngneat/falso": "^6.1.0",
    "@remix-run/dev": "^1.6.8",
    "@remix-run/eslint-config": "^1.6.8",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.4",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@types/eslint": "^8.4.6",
    "@types/marked": "^4.0.6",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.0.1",
    "cypress": "^10.6.0",
    "dotenv-cli": "^6.0.0",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "happy-dom": "^6.0.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "prisma": "^4.2.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.2",
    "uuid": "^8.3.2",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.22.1"
  },
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false
}

{
  "name": "conference-hall-remix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "dotenv -e .env.dev -- node ./server.mjs",
    "build": "vite build && vite build --ssr",
    "start": "run-s start:*",
    "start:db": "prisma migrate deploy",
    "start:server": "node ./server.mjs",
    "test": "dotenv -e .env.test -- run-s test:*",
    "test:db": "prisma db push --accept-data-loss",
    "test:unit": "vitest --config ./vitest.config.ts",
    "cypress": "dotenv -e .env.dev -- cypress open --e2e -b electron",
    "db:migrate": "dotenv -e .env.dev -- prisma migrate dev",
    "db:reset": "dotenv -e .env.dev -- prisma migrate reset",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint --ignore-path .gitignore .",
    "tsc": "tsc -b && tsc -b cypress",
    "story": "ladle serve",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint --ignore-path .gitignore",
    "**/*.{json,md,mdx,html,css,yml}": "prettier -l --write"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  },
  "dependencies": {
    "@conform-to/zod": "^0.9.1",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@prisma/client": "^5.6.0",
    "@remix-run/node": "2.3.1",
    "@remix-run/react": "2.3.1",
    "@remix-run/serve": "2.3.1",
    "@sindresorhus/slugify": "^2.2.1",
    "class-variance-authority": "^0.7.0",
    "compression": "^1.7.4",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.4",
    "firebase": "^10.6.0",
    "firebase-admin": "^11.11.1",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "isbot": "^3.7.1",
    "marked": "^10.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hotkeys-hook": "^4.4.1",
    "remix": "2.3.1",
    "sonner": "^1.2.3",
    "source-map-support": "^0.5.21",
    "tiny-invariant": "^1.3.1",
    "use-debounce": "^10.0.0",
    "uuid": "^9.0.1",
    "xss": "^1.0.14",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ladle/react": "^4.0.0",
    "@ngneat/falso": "^7.1.1",
    "@remix-run/dev": "2.3.1",
    "@remix-run/eslint-config": "2.3.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@types/compression": "^1.7.5",
    "@types/eslint": "^8.44.7",
    "@types/marked": "^5.0.2",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@types/source-map-support": "^0.5.10",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.16",
    "close-with-grace": "^1.2.0",
    "cypress": "^13.6.0",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "prisma": "^5.6.0",
    "remix-flat-routes": "^0.6.2",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.5.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6"
  },
  "engines": {
    "node": ">=20"
  }
}

{
  "name": "conference-hall-remix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "dotenv -e .env.dev -- run-p dev:*",
    "dev:app": "node ./server.mjs",
    "dev:jobs": "tsx ./jobs/server.ts",
    "build": "remix vite:build",
    "start": "run-s start:*",
    "start:db": "prisma migrate deploy",
    "start:server": "node ./server.mjs",
    "jobs:start": "tsx ./jobs/server.ts",
    "jobs:build": "echo 'no build needed'",
    "test": "dotenv -e .env.test -- run-s 'test:!(e2e)'",
    "test:db": "prisma db push --accept-data-loss",
    "test:unit": "vitest --config ./vitest.config.ts",
    "test:e2e": "dotenv -e .env.dev -- cypress open --e2e -b electron",
    "db:migrate": "dotenv -e .env.dev -- prisma migrate dev",
    "db:reset": "dotenv -e .env.dev -- prisma migrate reset -f",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint --ignore-path .gitignore .",
    "tsc": "tsc -b && tsc -b cypress",
    "dep:updates": "npx npm-check-updates -i",
    "script:migrate": "tsx ./migration/index.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint --ignore-path .gitignore",
    "**/*.{json,md,mdx,html,css,yml}": "prettier -l --write"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.0",
    "@heroicons/react": "^2.1.4",
    "@prisma/client": "^5.15.1",
    "@remix-run/node": "^2.9.2",
    "@remix-run/react": "^2.9.2",
    "@remix-run/serve": "^2.9.2",
    "@sentry/remix": "^8.11.0",
    "@sindresorhus/slugify": "^2.2.1",
    "bullmq": "^5.8.2",
    "class-variance-authority": "^0.7.0",
    "compression": "^1.7.4",
    "date-fns": "^3.6.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "firebase": "^10.12.2",
    "firebase-admin": "^12.2.0",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.0",
    "isbot": "^5.1.9",
    "mailgun.js": "^10.2.1",
    "marked": "^13.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.13.0-alpha.4",
    "remix": "^2.9.2",
    "sonner": "^1.5.0",
    "source-map-support": "^0.5.21",
    "tiny-invariant": "^1.3.3",
    "use-debounce": "^10.0.1",
    "uuid": "^10.0.0",
    "xss": "^1.0.15",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@ngneat/falso": "^7.2.0",
    "@remix-run/dev": "^2.9.2",
    "@remix-run/eslint-config": "^2.9.2",
    "@sentry/vite-plugin": "^2.19.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@testing-library/cypress": "^10.0.2",
    "@testing-library/jest-dom": "^6.4.6",
    "@types/compression": "^1.7.5",
    "@types/eslint": "^8.56.10",
    "@types/marked": "^6.0.0",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.15",
    "@types/progress": "^2.0.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/source-map-support": "^0.5.10",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.19",
    "close-with-grace": "^1.3.0",
    "cypress": "^13.12.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "prisma": "^5.15.1",
    "remix-flat-routes": "^0.6.5",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": "20.x"
  }
}

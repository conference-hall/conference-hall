{
  "name": "conference-hall",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "dotenv -e .env.dev -- concurrently -r 'npm:dev:*'",
    "dev:app": "vite",
    "dev:jobs": "tsx ./jobs/server.ts",
    "build": "remix vite:build",
    "start": "npm run start:db && npm run start:server",
    "start:db": "prisma migrate deploy",
    "start:server": "node ./build/server/index.js",
    "jobs:start": "tsx ./jobs/server.ts",
    "jobs:build": "echo 'no build needed'",
    "test": "npm run test:db && npm run test:unit",
    "test:db": "dotenv -e .env.test -- prisma db push --accept-data-loss",
    "test:unit": "dotenv -e .env.test -- vitest --config ./vitest.config.ts",
    "test:e2e": "dotenv -e .env.dev -- cypress open --e2e -b electron",
    "db:migrate": "dotenv -e .env.dev -- prisma migrate dev",
    "db:reset": "dotenv -e .env.dev -- prisma migrate reset -f",
    "lint": "biome check",
    "lint:ci": "biome ci",
    "tsc": "tsc -b && tsc -b cypress"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  },
  "dependencies": {
    "@conform-to/zod": "^1.1.5",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^7.0.0",
    "@headlessui/react": "^2.1.2",
    "@heroicons/react": "^2.1.5",
    "@prisma/client": "^5.18.0",
    "@remix-run/node": "^2.11.2",
    "@remix-run/react": "^2.11.2",
    "@remix-run/serve": "^2.11.2",
    "@sentry/remix": "^8.26.0",
    "@sindresorhus/slugify": "^2.2.1",
    "bullmq": "^5.12.10",
    "class-variance-authority": "^0.7.0",
    "compression": "^1.7.4",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "firebase": "^10.13.0",
    "firebase-admin": "^12.4.0",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.0",
    "isbot": "^5.1.17",
    "mailgun.js": "^10.2.3",
    "marked": "^14.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.13.0-alpha.4",
    "remix": "^2.11.2",
    "remix-create-express-app": "^0.4.5",
    "sitemap": "^8.0.0",
    "sonner": "^1.5.0",
    "tiny-invariant": "^1.3.3",
    "use-debounce": "^10.0.3",
    "uuid": "^10.0.0",
    "xss": "^1.0.15",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@mdx-js/rollup": "^3.0.1",
    "@ngneat/falso": "^7.2.0",
    "@remix-run/dev": "^2.11.2",
    "@sentry/vite-plugin": "^2.22.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.14",
    "@testing-library/cypress": "^10.0.2",
    "@testing-library/jest-dom": "^6.5.0",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.20",
    "close-with-grace": "^2.1.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.13.3",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "lefthook": "^1.7.14",
    "prisma": "^5.18.0",
    "remix-express-dev-server": "^0.4.4",
    "remix-flat-routes": "^0.6.5",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.18.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": "20.x"
  }
}

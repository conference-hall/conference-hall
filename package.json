{
  "name": "conference-hall",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "dotenvx run -f .env.dev -- pnpm -F @conference-hall/webapp dev",
    "dev:migrate": "dotenvx run -f .env.dev -- pnpm -F @conference-hall/database migrate:dev",
    "dev:reset": "dotenvx run -f .env.dev -- pnpm -F @conference-hall/database reset",
    "test": "pnpm test:migrate && pnpm -r test",
    "test:migrate": "dotenvx run -f .env.test -- pnpm -F @conference-hall/database migrate:test",
    "lint": "biome check",
    "lint:ci": "biome ci",
    "tsc": "pnpm -F @conference-hall/webapp typegen && tsc -b",
    "knip": "knip"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@dotenvx/dotenvx": "^1.51.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "^22.19.0",
    "knip": "^5.69.1",
    "lefthook": "^2.0.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": "22.x"
  }
}
